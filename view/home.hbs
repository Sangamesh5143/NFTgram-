<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    .hero {
        width: 100%;
        height: 100vh;
        background-image: linear-gradient(rgba(12, 3, 51, 0.3), rgba(12, 3, 51, 0.3));
        position: relative;
        padding: 0 5%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    nav {
        width: 100%;
        position: absolute;
        top: -40px;
        left: 0;
        padding: 20px 8%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 40vh;
    }


    nav ul li {
        list-style: none;
        margin-left: 40px;
        text-decoration: none;
        color: #fff;
        font-size: 17px;
        cursor: pointer;
    }

    nav ul li a{
        text-decoration: none;
        color: #fff;
    }

    nav ul li a:hover{
        text-decoration: underline;
    }

    .content{
        text-align: center;
    }

    .content h1 {
        font-size: 60px;
        color: #fff;
        font-weight: 600;
    }

    .content a {
        text-decoration: none;
        display: inline-block;
        color: #fff;
        font-size: 24px;
        border: 2px solid #fff;
        padding: 14px 24px;
        border-radius: 50px;
        transition: 0.5s;
        margin-top: 50px;
    }

    .btn{
        text-decoration: none;
        display: inline-block;
        color: #fff;
        background: transparent;
        font-size: 24px;
        padding: 14px 24px;
        border: none;
        transition: 0.5s;
        margin-top: 50px;
        cursor: pointer;
    }


    .output {
        position: absolute;
        margin-top: 450px;
    }

    .output h2{
        color: #fff;
    }

    .form{
        display: inline;
    }

    .form input{
        margin-left: 40px;
        border-bottom: 1px solid #fff !important;
        background: transparent;
        border: none;
        outline: none;
    }


</style>

